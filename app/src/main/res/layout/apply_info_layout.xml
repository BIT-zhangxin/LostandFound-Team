<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <TextView
        android:id="@+id/object_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:gravity="center"
        android:background="@color/style"
        android:text="@string/object_title"
        android:textSize="@dimen/text_size_title"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_apply_info_name"
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_height="40dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="事件ID："
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_apply_info_event_id"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="事件类型："
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_apply_info_event_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="相关用户："
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_apply_info_user_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="时间："
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_apply_info_time"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="描述："
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_apply_info_description"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_apply_info_contact_information"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="联系方式："
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_apply_info_contact_information"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_apply_info_reject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button"
            android:text="拒绝申请"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_button" />

        <Button
            android:id="@+id/btn_apply_info_apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginBottom="50dp"
            android:background="@drawable/button"
            android:text="同意申请"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_button" />

    </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>