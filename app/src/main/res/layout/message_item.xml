<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_message_name"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="15sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_message_main_event_type"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="15sp"
        android:layout_below="@id/tv_message_name"
        />

    <TextView
        android:id="@+id/tv_message_location"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="15sp"
        android:layout_below="@id/tv_message_main_event_type"
        />

    <TextView
        android:id="@+id/tv_message_time"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:textSize="15sp"
        android:layout_below="@id/tv_message_location"
        />

</RelativeLayout>