<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/object_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:gravity="center"
        android:background="@color/style"
        android:text="@string/object_title"
        android:textSize="@dimen/text_size_title"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_object_name"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_object_picture"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:contentDescription="@string/unknown"
        android:src="@drawable/default_picture"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="94dp"
            android:layout_height="25dp"
            android:text="创建用户：" />

        <TextView
            android:id="@+id/tv_object_user_name"
            android:layout_width="327dp"
            android:layout_height="25dp"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="94dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:text="事件ID：" />

        <TextView
            android:id="@+id/tv_object_id"
            android:layout_width="316dp"
            android:layout_height="30dp"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:text="事件类型：" />

        <TextView
            android:id="@+id/tv_object_main_event_type"
            android:layout_width="317dp"
            android:layout_height="25dp"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:text="事件地点：" />

        <TextView
            android:id="@+id/tv_object_location"
            android:layout_width="318dp"
            android:layout_height="25dp"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:text="发生时间：" />

        <TextView
            android:id="@+id/tv_object_time"
            android:layout_width="318dp"
            android:layout_height="25dp"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:text="事件描述：" />

        <TextView
            android:id="@+id/tv_object_description"
            android:layout_width="318dp"
            android:layout_height="50dp"
            android:textSize="15sp" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_object_apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginBottom="50dp"
        android:background="@drawable/button"
        android:layout_gravity="center"
        android:paddingTop="@dimen/margin_small"
        android:paddingBottom="@dimen/margin_small"
        android:text="@string/object_apply"
        android:textColor="@color/white"
        android:textSize="20sp" />

</LinearLayout>