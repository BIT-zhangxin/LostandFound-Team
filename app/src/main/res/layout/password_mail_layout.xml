<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/register_title_mail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:gravity="center"
        android:background="@color/style"
        android:text="修改邮箱"
        android:textSize="@dimen/text_size_title"
        android:textColor="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:layout_marginTop="@dimen/input_margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin">

        <ImageView
            android:layout_width="@dimen/imageView"
            android:layout_height="@dimen/imageView"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin_tiny"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:src="@drawable/ic_password"
            android:scaleType="fitXY"
            android:contentDescription="@string/login_account"/>

        <EditText
            android:id="@+id/et_information_security_password_mail_old_hint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editText"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/line"
            android:layout_marginStart="@dimen/editText_start"
            android:layout_marginLeft="@dimen/editText_start"
            android:background="@null"
            android:hint="@string/information_security_password_old_hint"
            android:inputType="textPassword"
            android:maxLines="1"
            android:maxLength="20"
            android:digits="@string/valid_character"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_deep"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/editText_start"
            android:layout_marginLeft="@dimen/editText_start"
            android:background="@color/style" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/input_height"
        android:layout_marginTop="@dimen/input_margin"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin">

        <ImageView
            android:layout_width="@dimen/imageView"
            android:layout_height="@dimen/imageView"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin_tiny"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:src="@drawable/ic_account"
            android:scaleType="fitXY"
            android:contentDescription="@string/login_password"/>

        <EditText
            android:id="@+id/et_information_security_password_mail_new_hint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/editText"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/line"
            android:layout_marginStart="@dimen/editText_start"
            android:layout_marginLeft="@dimen/editText_start"
            android:background="@null"
            android:hint="请输入邮箱号"
            android:inputType="text"
            android:maxLines="1"
            android:maxLength="50"
            android:digits="@string/valid_character"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_deep"
            android:textSize="@dimen/text_size_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/editText_start"
            android:layout_marginLeft="@dimen/editText_start"
            android:background="@color/style" />
    </RelativeLayout>

