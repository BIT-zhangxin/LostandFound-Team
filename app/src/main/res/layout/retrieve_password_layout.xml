<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_retrieve_password_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title"
        android:background="@color/style"
        android:gravity="center"
        android:text="@string/retrieve_password_title"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginTop="150dp"
        android:layout_marginRight="@dimen/margin">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/margin_tiny"
            android:layout_marginLeft="@dimen/margin_tiny"
            android:contentDescription="@string/login_account"
            android:scaleType="fitXY"
            android:src="@drawable/ic_account" />

        <EditText
            android:id="@+id/et_retrieve_password_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="@dimen/editText_start"
            android:layout_marginBottom="@dimen/line"
            android:background="@null"
            android:hint="@string/login_account_hint"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_deep"
            android:textSize="@dimen/text_size_normal"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@id/et_retrieve_password_account"
            android:background="@color/style" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_marginBottom="50dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_retrieve_password_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button"
            android:text="@string/retrieve_password_next"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_button" />

    </LinearLayout>

</LinearLayout>